module GeneradorPulsos(
	input Clock1M,
	input Reset,
	input Enable,
	output reg Trigger=1'b0,
	output reg Done=1'b0,
	output reg [3:0] Contador=1'b0
);

always @(posedge Clock1M)begin
	if(Reset==1'b0)begin
		if(Enable==1'b1)begin
			Contador<=Contador+1'b1;
			
			if(Contador==1'b0)Trigger=1'b0;
			else Trigger=1'b1;
			
			if(Contador==4'd10)begin
				Contador<=1'b0;
				Done=1'b1;
			end
			else Done=1'b0;
		end	
	end
	else if(Reset==1'b1 | Enable==1'b0)begin
		Contador<=1'b0;
		Trigger=1'b0;
		Done=1'b0;
	end
end



endmodule
